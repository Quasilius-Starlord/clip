box {
  height: 250px;
  position: top;
  margin-top: 1em;
  margin-bottom: 1em;
  background-color: #fff;

  box {
    width: 460px;
    position: left;

    margin-left: .75em;

    scale-x-padding: 0.5;
    scale-y: log;

    bars {
      xs: csv(tests/testdata/histogram.csv, var0);
      ys: csv(tests/testdata/histogram.csv, var1);
      color: #888;
      size: 14pt;
    }

    axis {
      position: bottom;
      layout: linear(1, align 1);
    }

    axis {
      position: top;
      layout: linear(1, align 1);
    }

    axis {
      position: left;
      width: 60px;
    }

    legend {
      position: top right inside;
      items: "New York";
      colors: #4572a7;
    }
