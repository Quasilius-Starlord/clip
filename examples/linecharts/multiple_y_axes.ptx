width: 1200px;
height: 480px;

lines {
  xs: csv('tests/testdata/city_temperatures_pivot.csv', month);
  ys: csv('tests/testdata/city_temperatures_pivot.csv', temp_london);
  colors: #06c;
  scale-y-max: 30;
  scale-y-min: -5;
}

lines {
  xs: csv('tests/testdata/city_temperatures_pivot.csv', month);
  ys: csv('tests/testdata/city_temperatures_pivot.csv', temp_beijing);
  colors: #c06;
  scale-y-max: 30;
  scale-y-min: -15;
}

axis {
  position: left;
  layout: linear(5);
  scale-max: 30;
  scale-min: -5;
}

axis {
  position: right;
  layout: linear(5);
  scale-max: 30;
  scale-min: -15;
}

axis {
  position: bottom;
  layout: discrete;
}

axis {
  position: top;
  layout: discrete;
}
