width: 1200px;
height: 480px;

plot {
  data: csv('tests/testdata/city_temperatures.csv');
  x: month;
  y: temperature;
  group: city;

  scale-y: inverted;
  scale-y-min: -10;
  scale-y-max: 32;

  margin-right: 2.4em;

  layer {
    type: lines;
  }

  layer {
    type: points;
  }

  legend {
    position: bottom left inside;
  }
}
