width: 1200px;
height: 480px;

plot {
  data: csv('tests/testdata/city_temperatures.csv');
  x: month;
  y: temperature;
  group: city;

  axis-y-min: -30;
  axis-y-max: 40;

  margin-right: 2.4em;

  layer {
    type: lines;
  }

  layer {
    type: points;
  }

  legend {
    position: bottom left inside;
  }
}
